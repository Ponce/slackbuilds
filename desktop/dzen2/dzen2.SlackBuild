PRGNAM=dzen2
VERSION=${VERSION:-0.8.5}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i486 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi

CWD=$(pwd)
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

if [ "$ARCH" = "i486" ]; then
  SLKCFLAGS="-O2 -march=i486 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="-O2 -march=i686 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2 -fPIC"
  LIBDIRSUFFIX="64"
else
  SLKCFLAGS="-O2"
  LIBDIRSUFFIX=""
fi

set -e

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$PRGNAM-$VERSION.tar.gz
cd $PRGNAM-$VERSION
chown -R root:root .
find . \
 \( -perm 777 -o -perm 775 -o -perm 711 -o -perm 555 -o -perm 511 \) \
 -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 \) \
 -exec chmod 644 {} \;

# configure
# - uncomment the second sed invocation to add XPM support
# - uncomment the third sed invocation to add Xinerama support
sed -s -i \
    -e "s/^LIBS = -L\/usr\/lib/LIBS = -L\/usr\/lib${LIBDIRSUFFIX}/" \
    -e "s/^CFLAGS = -Os/CFLAGS = ${SLKCFLAGS}/" \
    config.mk \
    gadgets/config.mk
#sed -i -e "s/^LIBS = .*/& -lXpm/"      -e "s/^CFLAGS = .*/& -DDZEN_XPM/"      config.mk
#sed -i -e "s/^LIBS = .*/& -lXinerama/" -e "s/^CFLAGS = .*/& -DDZEN_XINERAMA/" config.mk


# build dzen and gadgets
make install \
    PREFIX=/usr \
    MANPREFIX=/usr/man \
    X11INC=/usr/include/X11 \
    X11LIB=/usr/lib${LIBDIRSUFFIX}/X11 \
    DESTDIR=$PKG
make -C gadgets install \
    PREFIX=/usr \
    MANPREFIX=/usr/man \
    X11INC=/usr/include/X11 \
    X11LIB=/usr/lib${LIBDIRSUFFIX}/X11 \
    DESTDIR=$PKG

find $PKG | xargs file | grep -e "executable" -e "shared object" | grep ELF \
  | cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null || true

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a \
  CREDITS INSTALL LICENSE README* \
  gadgets/*.sh gadgets/README.* \
  bitmaps \
  $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild
find $PKG/usr/doc -type f -exec chmod 0644 {} \;

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-tgz}
