PRGNAM=soil
VERSION=${VERSION:-1.07}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}
DIRNAM="Simple OpenGL Image Library"

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i486 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi

CWD=$(pwd)
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

if [ "$ARCH" = "i486" ]; then
  SLKCFLAGS="-O2 -march=i486 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="-O2 -march=i686 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2 -fPIC"
  LIBDIRSUFFIX="64"
else
  SLKCFLAGS="-O2"
  LIBDIRSUFFIX=""
fi

set -e

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf "$DIRNAM"
unzip $CWD/$PRGNAM.zip
cd "$DIRNAM"
chown -R root:root .
find -L . \
 \( -perm 777 -o -perm 775 -o -perm 750 -o -perm 711 -o -perm 555 -o -perm 511 \) \
 -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 \) \
 -exec chmod 644 {} \;

patch -p1 < $CWD/linking_correctly.patch

cd src
  make \
    CFLAGS="$SLKCFLAGS -c -fPIC -Wall" \
    LIBDIR="/usr/lib${LIBDIRSUFFIX}" \
    -f "../projects/makefile/alternate Makefile.txt"
  make install DESTDIR=$PKG \
    LIBDIR="/usr/lib${LIBDIRSUFFIX}" \
    INSTALL_FILE="install -pm 644" \
    INSTALL_DIR="install -dp" \
    -f "../projects/makefile/alternate Makefile.txt"
cd ..

# Fix permissions on shared library and remove static library.
chmod 755 $PKG/usr/lib${LIBDIRSUFFIX}/libSOIL.so.${VERSION}-20071110
rm -f $PKG/usr/lib${LIBDIRSUFFIX}/libSOIL.a

find $PKG -print0 | xargs -0 file | grep -e "executable" -e "shared object" | grep ELF \
  | cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null || true

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a soil.html $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-tgz}
