VERSION=${VERSION:-2.2.5}

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) export ARCH=i486 ;;
    arm*) export ARCH=arm ;;
       *) export ARCH=$( uname -m ) ;;
  esac
fi
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}

CWD=$(pwd)
