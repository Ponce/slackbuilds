cd $(dirname $0) ; CWD=$(pwd)

PRGNAM=weasis-bin
VERSION=${VERSION:-4.6.5}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}
PKGTYPE=${PKGTYPE:-tgz}

TARNAM=weasis

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i586 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi

if [ ! -z "${PRINT_PACKAGE_NAME}" ]; then
  echo "$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE"
  exit 0
fi

TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

if [ "$ARCH" = "i586" ]; then
  LIBDIRSUFFIX=""
  UNSUP=1
elif [ "$ARCH" = "i686" ]; then
  LIBDIRSUFFIX=""
  UNSUP=1
elif [ "$ARCH" = "x86_64" ]; then
  LIBDIRSUFFIX="64"
elif [ "$ARCH" = "aarch64" ]; then
  LIBDIRSUFFIX="64"
  UNSUP=1
else
  LIBDIRSUFFIX=""
  UNSUP=1
fi

if [[ "$UNSUP" == 1 ]] ; then
  printf "Unsupported architecture: unknown.\n" 1>&2
fi

set -e

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $TARNAM-$VERSION
mkdir -p $TARNAM-$VERSION
cd $TARNAM-$VERSION

rpm2targz $CWD/$TARNAM-$VERSION-1.$ARCH.rpm
tar xvf $TARNAM-$VERSION-1.$ARCH.tar.gz

chown -R root:root .
find -L . \
 \( -perm 777 -o -perm 775 -o -perm 750 -o -perm 711 -o -perm 555 \
  -o -perm 511 \) -exec chmod 755 {} + -o \
 \( -perm 666 -o -perm 664 -o -perm 640 -o -perm 600 -o -perm 444 \
  -o -perm 440 -o -perm 400 \) -exec chmod 644 {} +

install -d -m755 $PKG/opt
mv opt/${TARNAM} $PKG/opt/

mkdir -p "$PKG"/usr/bin
(
    cd $PKG/usr/bin
    ln -sr ../../opt/${TARNAM}/bin/${TARNAM^} ./ || exit 1
) || exit 1

PKGOPT=$PKG/opt/${TARNAM}

install -Dm644 $PKGOPT/lib/$TARNAM-${TARNAM^}.desktop \
        $PKG/usr/share/applications/$TARNAM.desktop

install -Dm644 $PKGOPT/lib/$TARNAM-Dicomizer.desktop \
        $PKG/usr/share/applications/$TARNAM.desktop

install -Dm644 $PKGOPT/lib/${TARNAM^}.png \
        $PKG/usr/share/icons/hicolor/64x64/${TARNAM^}.png
install -Dm644 $PKGOPT/lib/${TARNAM^}.png \
        $PKG/usr/share/pixmaps/$TARNAM.png


mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a \
  usr/share/licenses/$TARNAM-$VERSION/Licence.txt \
  $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc
cat $CWD/doinst.sh > $PKG/install/doinst.sh

# Final sanity check.
if [[ "${PRGNAM: -4}" != "-bin" ]] ; then
  printf "Fatal Error: PRGNAM must end in '-bin', but now ends with %s\n" \
         "${PRGNAM: -4}"
  exit 2
fi

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE
