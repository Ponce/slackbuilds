cd $(dirname $0) ; CWD=$(pwd)

PRGNAM=pingendo
VERSION=${VERSION:-v3}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}
PKGTYPE=${PKGTYPE:-tgz}

ARCH=${ARCH:-$(uname -m)}
case "$ARCH" in
  i?86)
    ARCH=i586
    SRCNAM=pingendo-linux-i686.zip
    SRCDIR=Pingendo-linux-ia32
    ;;
  x86_64)
    SRCNAM=pingendo-linux-x86_64.zip
    SRCDIR=Pingendo-linux-x64
    ;;
  *)
    echo "$ARCH is not supported"
    exit 1
    ;;
esac

# If the variable PRINT_PACKAGE_NAME is set, then this script will report what
# the name of the created package would be, and then exit. This information
# could be useful to other scripts.
if [ ! -z "${PRINT_PACKAGE_NAME}" ]; then
  echo "$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE"
  exit 0
fi

TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

if [ "$ARCH" = "i586" ]; then
  SLKCFLAGS="-O2 -march=i586 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="-O2 -march=i686 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2 -fPIC"
  LIBDIRSUFFIX="64"
else
  SLKCFLAGS="-O2"
  LIBDIRSUFFIX=""
fi

set -e

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT

DESTDIR=$PKG/opt

mkdir -p $DESTDIR/$PRGNAM
cd $TMP
unzip -o $CWD/$SRCNAM
cd $SRCDIR
chown -R root:root .
find -L . \
 \( -perm 777 -o -perm 775 -o -perm 750 -o -perm 711 -o -perm 555 \
  -o -perm 511 \) -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 640 -o -perm 600 -o -perm 444 \
  -o -perm 440 -o -perm 400 \) -exec chmod 644 {} \;

cp -ar * $PKG/opt/$PRGNAM

mkdir -p $PKG/usr/share/applications
cp $CWD/pingendo.desktop $PKG/usr/share/applications

mkdir -p $PKG/usr/share/pixmaps/
cp $CWD/pingendo.ico $PKG/usr/share/pixmaps/$PRGNAM.ico

mkdir -p $PKG/usr/bin/
cd $PKG
ln -s /opt/$PRGNAM/Pingendo $PKG/usr/bin/$PRGNAM

mkdir -p $PKG/usr/lib$LIBDIRSUFFIX/
ln -s /opt/$PRGNAM/libnode.so $PKG/usr/lib$LIBDIRSUFFIX/

mkdir -p $PKG/usr/share/licenses/$PRGNAM-$VERSION
cd $DESTDIR/$PRGNAM
cp -a LICENSE $PKG/usr/share/licenses/$PRGNAM-$VERSION/LICENSE

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE
