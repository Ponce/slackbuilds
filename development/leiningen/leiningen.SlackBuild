PRGNAM=leiningen
VERSION=${VERSION:-2.5.3}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}

ARCH=noarch

CWD=$(pwd)
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

set -e

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP

# check whether the 'lein' shell script's version matches VERSION above
eval $(grep ^export\ LEIN_VERSION $CWD/lein)
if [ "$LEIN_VERSION" != "$VERSION" ]; then
  printf "lein is not of version %s.\n" $VERSION 1>&2
  exit 1
fi

mkdir -p $PKG/usr/bin
cat $CWD/lein > $PKG/usr/bin/lein
chmod 0755 $PKG/usr/bin/lein

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-tgz}
