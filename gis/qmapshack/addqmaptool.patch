+    qreal bottom    = -NOFLOAT;
+    qreal top       =  NOFLOAT;
+    qreal left      =  NOFLOAT;
+    qreal right     = -NOFLOAT;
+
+    for(const CGridPoint& point : points)
+    {
+        const QPointF& pt = point.getPoint();
+
+        top     = qMin(pt.y(), top);
+        bottom  = qMax(pt.y(), bottom);
+        left    = qMin(pt.x(), left);
+        right   = qMax(pt.x(), right);
+    }
+
+    QRectF r(0,0,1,1);
+    r.setLeft(left);
+    r.setRight(right);
+    r.setTop(top);
+    r.setBottom(bottom);
+
+
