+void CItemTreeWidget::loadSettings(QSettings& cfg)
+{
+    QStringList files = cfg.value("files", QStringList()).toStringList();
+    addFiles(files);
+
+    const int N = treeFiles->topLevelItemCount();
+    for(int n = 0; n < N; n++)
+    {
