+
+    time = time.addSecs(ttime);
+
+    if(days)
+    {
+        val = QString("%1:").arg(days) + time.toString("HH:mm:ss");
+        unit = "d";
+    }
+    else
+    {
+        val = time.toString("HH:mm:ss");
+        unit = "h";
+    }
