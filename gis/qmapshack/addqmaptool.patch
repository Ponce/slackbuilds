+{
+    return Qt::ArrowCursor;
+}
+
+
+void CGridSelArea::slotSetArea(const QRectF& rect)
+{
+    area = rect;
+    context->triggerCompleteUpdate(CCanvas::eRedrawOverlay);
+    emit sigChanged();
+}
+
+void CGridSelArea::slotReset()
+{
+    area    = QRectF();
+    state   = eStateIdle;
+    corner  = eCornerNone;
+    context->triggerCompleteUpdate(CCanvas::eRedrawOverlay);
