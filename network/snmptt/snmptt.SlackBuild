PRGNAM=snmptt
VERSION=${VERSION:-1.4}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}

CWD=$(pwd)
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

set -e

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/${PRGNAM}_$VERSION.tgz
cd ${PRGNAM}_$VERSION
chown -R root:root .
find -L . \
 \( -perm 777 -o -perm 775 -o -perm 750 -o -perm 711 -o -perm 555 \
  -o -perm 511 \) -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 640 -o -perm 600 -o -perm 444 \
  -o -perm 440 -o -perm 400 \) -exec chmod 644 {} \;

# It has to be done by hand...
mkdir -p $PKG/{usr/sbin,var/log/snmptt,var/spool/snmptt}
mkdir -p $PKG/etc/{snmp,rc.d,logrotate.d}
cp -a snmptt snmptthandler $PKG/usr/sbin
cp snmptt.ini $PKG/etc/snmp/snmptt.ini.new
cp snmptt-init.d $PKG/etc/rc.d/rc.snmptt.new
cp snmptt.logrotate $PKG/etc/logrotate.d/snmptt.new

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a BUGS COPYING ChangeLog INSTALL README contrib docs examples \
  $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

# Copy sample scripts to doc dir
mkdir $PKG/usr/doc/$PRGNAM-$VERSION/scripts
cp snmpttconvert snmpttconvertmib snmptt-net-snmp-test snmptthandler-embedded \
  $PKG/usr/doc/$PRGNAM-$VERSION/scripts

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc
cat $CWD/doinst.sh > $PKG/install/doinst.sh

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-noarch-$BUILD$TAG.${PKGTYPE:-tgz}
