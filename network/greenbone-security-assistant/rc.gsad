#!/bin/sh

# Get OpenVAS options
. /etc/rc.d/rc.openvas.conf

PIDFILE="/var/run/gsad.pid"

start() {
  echo "Starting Greenbone Security Assistant..."
  gsad --mport=${MAN_PORT} ${GSA_OPTIONS}
}

stop() {
  echo "Stopping Greenbone Security Assistant..."
  kill $(cat $PIDFILE)
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    stop
    sleep 1
    start
    ;;
  *)
    echo "Usage: $0 (start|stop|restart)"
esac
