#!/bin/sh

PIDFILE="/var/run/openvasd.pid"

start() {
  echo "Starting OpenVAS server..."
  openvasd -D
}

stop() {
  echo "Stopping OpenVAS server..."
  kill `cat $PIDFILE`
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    stop
    sleep 1
    start
    ;;
  *)
    echo "Usage: $0 (start|stop|restart)"
esac
