#!/bin/sh
# Slackware wrapper for the Joplin AppImage.
runme(){
    cd /opt/Joplin
    ./Joplin-3.4.10.AppImage "$@"
}

if [ $UID == 0 ]; then
    read -p "You are currently running as root...\
 Are you sure you want to proceed? (N/y): " resp
    case "$resp" in
	y|yes)
	    runme
	    ;;
	*)
	    echo Exiting
	    exit 0
	    ;;
    esac
else
    runme $@
fi
